block = "custom"
command = "/home/{{ username }}/configs/scripts/multiscreens.sh"
interval = 10



[[block]]
block = "memory"
display_type = "memory"
clickable = false
format_mem = "{Mupi}% ({Mug}GB)"
# format_mem = "{MFm}MB/{MTm}MB({Mp}%)"
warning_mem = 60.0
critical_mem = 80.0



[[block]]
block = "net"
device = "{{ lan }}"
speed_up = false
speed_down = false

{% if wifi is defined %}

[[block]]
block = "net"
device = "{{ wifi }}"
speed_up = false
speed_down = false
ssid = true

{% endif %}

{% if wifi2 is defined %}

[[block]]
block = "net"
device = "{{ wifi2 }}"
speed_up = false
speed_down = false
ssid = true

{% endif %}




